<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:uix="clr-namespace:uix"
             Title="Cat">
        <ContentPage.ToolbarItems>
            <ToolbarItem Text="Source" Command="{uix:NavPush cat.xaml, Type=Html}"/>
        </ContentPage.ToolbarItems>   
        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">
  
                <Image
					uix:Node.Key="CatImage"
                    Source="{uix:RelPath cat.png}"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    />
    
                <Label
                    Text="This is a cat!"
                    Style="{StaticResource Headline}"
                    HorizontalTextAlignment="Center"
                    />
				<Button
					x:Name="B1"
					uix:Node.Key="CatButton"
					Text="Show another cat"
					Command="{uix:HttpGet cat2.xml}"
					/>
    
            </VerticalStackLayout>
        </ScrollView>
</ContentPage>
